<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center">Danh Sach Mon hoc</h2>

        <!-- Display validation errors -->
        <% if (typeof errors !== "undefined" && errors.length > 0) { %>
            <div class="alert alert-danger">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/save" method="POST"  class="mb-4"
            enctype="multipart/form-data"
        >

        <input type="text" name="id" class="form-control mb-2" placeholder="Nhap ID.." required/>
        <input type="text" name="name" class="form-control mb-2" placeholder="Nhap ten mh.."required/>  
        <input type="text" name="course_type" class="form-control mb-2" placeholder="Nhap loai mh.."required/>
        <input type="text" name="semester" class="form-control mb-2" placeholder="Nhap hoc ky.." required/>
        <input type="text" name="department" class="form-control mb-2" placeholder="Nhapkhoa.." required/>

        <div class="form-group mb-3">
            <label class="form-label" for="image">Chon anh</label>
            <input type="file" name="image" class="form-control" id="image" required/>
        </div>

        <button type="submit" class="btn btn-primary">Them Mon Hoc</button>
        </form>

        <table class="table table-bordered">
            <thead class = "thead-dark">
                <tr>
                    <th>STT</th>
                    <th>Ten Mon Hoc</th>
                    <th>Loai Mon Hoc</th>
                    <th>Hoc Ky</th>
                    <th>Khoa</th>
                    <th>Anh</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.tenMonHoc %></td>
                        <td><%= item.loai %></td>
                        <td><%= item.hocKy %></td>
                        <td><%= item.khoa %></td>
                        <td>
                            <img src="<%= item.image %>" alt="" style="width: 100px; height: 100px;"/>
                        </td>
                        <form action="/delete/<%= item.id %>" method="post" class="mt-1">
                            <td>
                                <button type="submit" class="btn btn-danger">Xoa</button>
                            </td>
                        </form>
                    </tr>
                <% }) %>
            </tbody>

    </div>


</body>

</html>